@page "/usuarios"

@using Entidades;
@using Negocio;
@using CurrieTechnologies.Razor.SweetAlert2;

@inject SweetAlertService Swal;


<div class="d-flex align-items-center justify-content-between mt-3">
    <h2>Usuarios</h2>
    <a href="usuario">
        <img src="./css/add.png" style="width: 65px; height: 65px" />
    </a>
</div>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Nombre de Usuario</th>
            <th>Clave</th>
            <th>Habilitado</th>
            <th>Cambia Clave</th>
            <th>Persona</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (usuarios == null)
        {
            <tr>
                <td colspan="6" align="center">
                    <img style="width:50px" src="https://media.tenor.com/On7kvXhzml4AAAAj/loading-gif.gif" />
                </td>
            </tr>
        }
        else
        {
            @foreach (var usuario in usuarios)
            {
                <tr>
                    <td style="vertical-align: middle;">@usuario.Nombre_usuario</td>
                    <td style="vertical-align: middle;">@usuario.Clave</td>
                    <td style="vertical-align: middle;">@(usuario.Habilitado == 1 ? "Si" : "No")</td>
                    <td style="vertical-align: middle;">@(usuario.Cambia_clave == 0 ? "No" : "No")</td>
                    <td style="vertical-align: middle;">@usuario.Persona.Apellido, @usuario.Persona.Nombre</td>
                    <td class="d-flex justify-content-end">
                        <a class="btn btn-primary btn-sm" href="usuario/@usuario.Id_usuario">
                            <i class="bi bi-pencil-square fs-5"></i>
                        </a>
                        <button class="btn btn-danger btn-sm ms-2" @onclick="(() => EliminarUsuario(usuario))">
                            <i class="bi bi-trash-fill fs-5"></i>
                        </button>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>


@code {

    IEnumerable<Usuario> usuarios = null;

    protected override async Task OnInitializedAsync()
    {
        usuarios = await UsuarioNegocio.GetAll();
    }

    private async Task EliminarUsuario(Usuario usuario)
    {
        var result = await Swal.FireAsync(new SweetAlertOptions
        {
            Title = "¿Está seguro?",
            Text = "Esta acción no se puede revertir",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            CancelButtonText = "Cancelar",
            ConfirmButtonText = "Confirmar"
        });

        if (result.IsConfirmed)
        {
            var response = await UsuarioNegocio.Delete(usuario);

            if (response)
            {
                await Swal.FireAsync("Usuario eliminado", "El usuario ha sido eliminado correctamente", SweetAlertIcon.Success);
                
                usuarios = await UsuarioNegocio.GetAll();          
                
            } else
            {
                await Swal.FireAsync("Error", "La operación no se ha podido llevar a cabo", SweetAlertIcon.Error);
            }
        }

    }
}